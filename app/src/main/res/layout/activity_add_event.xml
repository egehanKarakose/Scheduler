<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".AddEventActivity">
    <TextView
            android:text="Add Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textColor="@color/text" android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/constraintLayout2">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventTitleEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Title" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout3">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventPlaceEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Place" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout4">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventDescriptionEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Description" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            android:id="@+id/constraintLayout5">

        <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventDaySpinner"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Day" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" android:id="@+id/linearLayout">
        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/AddEventStartEditText"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="center"
                android:hint="Start Time" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventEndEditText"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="center"
                android:hint="End Time" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>

    </LinearLayout>
    <CheckBox
            android:text="Have to do!!!"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obligationCheckbox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"/>
    <Button
            android:text="Save"
            android:layout_width="108dp"
            android:layout_height="62dp"
            android:background="@drawable/custom_save_button"
            android:textColor="@color/white"
            android:id="@+id/SaveButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/obligationCheckbox"
            app:layout_constraintEnd_toEndOf="@+id/obligationCheckbox"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/obligationCheckbox"
            app:layout_constraintHorizontal_bias="0.931" android:textSize="18sp"
            android:textStyle="bold" android:onClick="saveEvent"/>

</androidx.constraintlayout.widget.ConstraintLayout>