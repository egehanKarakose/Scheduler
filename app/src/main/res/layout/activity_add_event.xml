<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".AddEventActivity">
    <ImageView
            android:layout_width="63dp"
            android:layout_height="58dp" app:srcCompat="@drawable/ic_addevent"
            android:id="@+id/AddEventImageView"
            app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:text="Add Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textColor="@color/text" android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/constraintLayout2">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventTitleEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Title" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="43dp" app:srcCompat="@drawable/ic_event"
                android:id="@+id/titleImageView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="21dp"
                app:layout_constraintEnd_toStartOf="@+id/AddEventTitleEditText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout3">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventPlaceEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Place" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="43dp" app:srcCompat="@drawable/ic_place"
                android:id="@+id/placeImageView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="21dp"
                app:layout_constraintEnd_toStartOf="@+id/AddEventPlaceEditText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout4">

        <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventDescriptionEditText"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Description" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="43dp" app:srcCompat="@drawable/ic_decription"
                android:id="@+id/descriptionImageView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="21dp"
                app:layout_constraintEnd_toStartOf="@+id/AddEventDescriptionEditText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            android:id="@+id/constraintLayout5">

        <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AddEventDaySpinner"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textColorHint="@color/text"
                android:outlineSpotShadowColor="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="textStart"
                android:hint="Day" android:textSize="24sp" android:backgroundTint="@color/colorAccent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal" android:layout_width="200dp" android:layout_marginLeft="16dp" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_starttime"
                    tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="31dp"
                    android:id="@+id/startTimeImageView"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"/>
            <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_weight="1"
                    android:id="@+id/AddEventStartEditText"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="center"
                    android:hint="Start Time" android:textSize="24sp" android:backgroundTint="@color/colorAccent"
                    android:onClick="setStartTime"/>


        </LinearLayout>

        <LinearLayout  android:orientation="horizontal"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="32dp">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_endtime"
                    tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="31dp"
                    android:id="@+id/endTimeImageView"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/AddEventEndEditText"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp" android:textAllCaps="false" android:textAlignment="center"
                    android:hint="End Time" android:textSize="24sp" android:backgroundTint="@color/colorAccent"
                    android:onClick="setEndTime"
                    android:layout_marginRight="4dp"/>



        </LinearLayout>

    </LinearLayout>

    <CheckBox
            android:id="@+id/obligationCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:text="Have to do!!!"
            android:textColor="@color/text"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/SaveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <Button
            android:id="@+id/SaveButton"
            android:layout_width="108dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_save_button"
            android:onClick="saveEvent"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/obligationCheckbox"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintStart_toStartOf="@+id/obligationCheckbox"
            app:layout_constraintTop_toBottomOf="@+id/obligationCheckbox" />

</androidx.constraintlayout.widget.ConstraintLayout>